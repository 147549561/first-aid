@import "../../components/steps/steps.wxss"
@import "../appeal/appeal.wxss"
.breathe-container {
  font-family: PingFangSC-Regular, sans-serif;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  flex-shrink: 0;
}
.swiper {
  display: flex;
  height: 100%;
  width: 100vw;
}
.swiper-item {
  /*height: 100%;*/
  width:100vw;
}
.item-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 50rpx;
}
.appeal-address {
  font-family:PingFangSC;
  font-size:80rpx;
  font-weight:lighter;
  margin-left:-120rpx;
  flex:1;
  line-height:120rpx;
}

.description {
  flex-shrink: 0;
  font-size: 56rpx;
  font-weight: bold;
  line-height: 80rpx;
  width: 650rpx;
  color: #23454D;
  border-bottom: 1px solid rgba(178,190,193, 0.4);
  padding-bottom: 50rpx;
}
.importent {
  box-shadow: 0px -35rpx yellow inset;
}
.img {
  margin: 50rpx 50rpx;
  height: 650rpx;
  width: 650rpx;
}
.nav {
  display: flex;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin: 50rpx 50rpx;
}
.nav-end {
  display: flex;
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 50rpx 50rpx;
}

.back {
  color: #FA5834;
  font-size: 36rpx;
  font-weight: bold;
  border: 1px solid #FA5834;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.back-arrow {
  width: 30rpx;
  height: 30rpx;
}

.next {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient( 45deg, #FF4C2F, #FF7856 );
  border: 1px solid #FA5834;
  line-height: 100rpx;
  width: 400rpx;
  border-radius: 100rpx;
  text-align: center;
}

.next-end {
  color: #FAA796;
  font-size: 36rpx;
  font-weight: bold;
  border: 1px solid #FAA796;
  line-height: 100rpx;
  width: 400rpx;
  border-radius: 100rpx;
  text-align: center;
}
